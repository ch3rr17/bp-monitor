<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BP Log</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Blood Pressure Log</h1>
        <div class="actions">
            <a href="/add" class="btn btn-primary">Add New Entry</a>
        </div>
        
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>AM Readings</th>
                    <th>PM Readings</th>
                </tr>
            </thead>
            <tbody>
                <% if (groups.length === 0) { %>
                    <tr>
                        <td colspan="3" class="empty-state">No entries yet.</td>
                    </tr>
                <% } else { %>
                    <% groups.forEach(group => { %>
                        <tr>
                            <td class="date-cell"><%= group.date %></td>
                            <td>
                                <% group.am.forEach(entry => { %>
                                    <div class="reading">
                                        <span class="numbers"><%= entry.systolic %>/<%= entry.diastolic %></span>
                                        <span class="time"><%= entry.time %></span>
                                    </div>
                                <% }) %>
                            </td>
                            <td>
                                <% group.pm.forEach(entry => { %>
                                    <div class="reading">
                                        <span class="numbers"><%= entry.systolic %>/<%= entry.diastolic %></span>
                                        <span class="time"><%= entry.time %></span>
                                    </div>
                                <% }) %>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
